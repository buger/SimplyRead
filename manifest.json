{
	"name": "SimplyRead",
	"version": "0.1",
	"description": "Read articles",

	"app": {
    	"launch": {
      		"local_path": "index.html"
    	}
	},  	

	"content_scripts": [
	    {
	      "matches": ["http://*/*", "https://*/*"],
	      "js": ["lib/browser_api.js","assets/js/content_script.js"],
	      "all_frames": true,
	      "run_at": "document_end"
	    }
	],

	"permissions": [
  		"tabs", "http://*/*", "https://*/*"
	]
}